<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Clientes</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Lista de Clientes</h1>
  <a href="/clients/add">Agregar Nuevo Cliente</a>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Teléfono</th>
        <th>Dirección</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each clients}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.email}}</td>
          <td>{{this.phone}}</td>
          <td>{{this.address}}</td>
          <td>
            <a href="/clients/edit/{{this._id}}">Editar</a>
            <a href="/clients/delete/{{this._id}}">Eliminar</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</body>
</html>
