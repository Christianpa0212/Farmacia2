<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Inventario</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Inventario de Productos</h1>
  <a href="/inventory/add">Agregar Nuevo Producto</a>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripci√≥n</th>
        <th>Cantidad</th>
        <th>Precio</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.description}}</td>
          <td>{{this.quantity}}</td>
          <td>{{this.price}}</td>
          <td>
            <a href="/inventory/edit/{{this._id}}">Editar</a>
            <a href="/inventory/delete/{{this._id}}">Eliminar</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</body>
</html>
